<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:orientation="vertical"
  tools:context=".MainActivity"
  tools:ignore="MissingPrefix">

  <TextView
    android:layout_marginTop="10dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    android:padding="10dp"
    android:text="selector"
    app:drawableType="selector"
    app:setAs="background"
    app:selectorStateNormal="@color/colorAccent"
    app:selectorStatePressed="@color/colorPrimary"/>

  <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:padding="10dp"
    android:text="shape"
    app:drawableType="shape"
    app:setAs="background"
    app:shapeCornerRadius="10dp"
    app:shapeSolidColor="@color/colorAccent"/>

  <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:padding="20dp"
    android:text="layer-list"
    app:layerItem0Drawable="@color/colorPrimary"
    app:layerItem1Drawable="@color/colorAccent"
    app:layerItem1Insets="6dp"
    app:setAs="background"
    app:drawableType="layer_list"/>

  <TextView
    android:clickable="true"
    android:focusable="true"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:padding="4dp"
    android:text="ripple"
    app:rippleColor="@color/colorAccent"
    app:rippleContent="@color/colorPrimary"
    app:drawableType="ripple"
    app:setAs="background"/>


</LinearLayout>